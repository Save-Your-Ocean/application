<!DOCTYPE html>

  <head>
    <meta charset="utf-8" />

    <title><%= settings.page_title %> | <%= settings.site_name %></title>


    <!-- UIkit CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.5.3/dist/css/uikit.min.css" />
    <link rel="stylesheet" href="../stylesheets/main.css" />
    <!-- UIkit JS -->
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.3/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.3/dist/js/uikit-icons.min.js"></script>
    <!-- FontAwesome Icons -->
    <script src="https://kit.fontawesome.com/98afebb8fa.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>
    $.(document).ready(function () {
        $('a[href="' + this.location.pathname + '"]').parent().addClass('active');
    });
    </script>
  </head>
  <body>
    <nav class="uk-navbar-container uk-margin uk-margin-small-bottom" uk-navbar>
      <div class="uk-navbar-center">
        <a class="uk-navbar-item uk-logo" href="/"><strong>SaveYour<span class="uk-text-primary">0cean</span></strong></a>
          <ul class="uk-navbar-nav">
            <li>
              <a href="/">
                <span class="uk-icon uk-margin-small-right" uk-icon="icon: home; ratio: 1.3"></span>
                  Home
              </a>
            </li>
            <li>
              <a href="/locations/map">
                <span class="uk-icon uk-margin-small-right" uk-icon="icon: location; ratio: 1.3"></span>
                  Map
              </a>
            </li>
            <% if logged_in? %>
            <li>
              <a href="/users/dashboard">
                <span class="uk-icon uk-margin-small-right" uk-icon="icon: settings; ratio: 1.3"></span>
                  Dashboard
              </a>
            </li>
            <li>
             <a href="/logout">
               <span class="uk-icon uk-margin-small-right" uk-icon="icon: sign-out; ratio: 1.3"></span>        
              </a>
            </li>
            <% else %>
            <li>
              <a href="/users/register">
                <span class="uk-icon uk-margin-small-right" uk-icon="icon: users; ratio: 1.3"></span>
                Join
              </a>
            </li>
            <li>
              <a href="/users/login">
                <span class="uk-icon uk-margin-small-right" uk-icon="icon: sign-in; ratio: 1.3"></span>
                Login
              </a>
            </li>
            <% end %>
          </ul>     
        </div>
      </div>
    </nav>
    <% if logged_in? %>
    <div class="uk-container uk-margin-remove-vertical">
    <div class="uk-navbar-center uk-margin-remove-bottom">
    <ul class="uk-subnav uk-navbar-center uk-margin-small-bottom">
      <li><a href="/users/profile/<%= current_user.username %>" class="uk-text-middle">
          <img src="<%= current_user.image %>" class="uk-preserve-width uk-border-circle" width="30" height="30" style="padding-right: 4px;">
          <%= current_user.username %>
          </a>
      </li>
      <% if is_admin? %>
      <li><a href="/locations/pending"><span uk-icon="icon: list" style="padding-right: 4px;"></span>Pending Listings</a></li>
      <% end %>
      <li><a href="/locations/new"><span uk-icon="icon: plus" style="padding-right: 4px;"></span>Add Business</a></li>
      <li><a href="/users/<%= current_user.username %>/edit"><span uk-icon="icon: file-edit" style="padding-right: 4px;"></span>Edit Profile</a></li>
    </ul>
    </div>
    </div>
    <% end %>
    
    <%= yield %>

    <div class="uk-section uk-background-secondary uk-margin-large-top">
      <div class="uk-container uk-padding-large-bottom">
          <div class="uk-grid uk-child-width-expand@s uk-light" uk-grid>
            <div>
              <h3>SYO</h3>
                <div class="uk-width-1-2@s uk-width-2-5@m">
                    <ul class="uk-nav uk-nav-default">
                        <li><a href="/">Home</a></li>
                        <li><a href="/about">About SYO</a></li>
                        <li><a href="/users/register">Team</a></li>
                    </ul>
                </div>
            </div>
            <div>
              <h3>Application</h3>
                <div class="uk-width-1-2@s uk-width-2-5@m">
                    <ul class="uk-nav uk-nav-default">
                        <li><a href="#">Map</a></li>
                        <li><a href="/users/login">Login</a></li>
                        <li><a href="/users/register">Join</a></li>
                    </ul>
                </div>
            </div>
            <div class="uk-text-center">
                <div class="uk-align-center uk-iconnav">
                  <a href="" uk-icon="icon: facebook"></a>
                  <a href="" uk-icon="icon: twitter"></a>
                  <a href="" uk-icon="icon: instagram"></a>
                </div>
                  <p>All content and images <br />
                  &copy; 2020 Save Your Ocean.</p>
                  </p>
            </div>
          </div>
        </div>
      </div>
    </div>
